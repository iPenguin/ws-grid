{
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "es6": true

    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true

        }
    },
    "globals": {},
    "rules": {
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "linebreak-style": 2,
        "curly": [
            2,
            "all"
        ],
        "space-in-parens": [
            2,
            "always"
        ],
        "keyword-spacing": [
            2,
            {
                "overrides": {
                    "if": {
                        "after": false
                    },
                    "for": {
                        "after": false
                    },
                    "while": {
                        "after": false
                    },
                    "do": {
                        "after": false
                    },
                    "switch": {
                        "after": false
                    },
                    "try": {
                        "after": false
                    },
                    "catch": {
                        "after": false
                    }
                }
            }
        ],
        "space-before-blocks": [
            2,
            "always"
        ],
        "wrap-iife": 2,
        "one-var": [
            2,
            "never"
        ],
        "no-empty": 0,
        "array-bracket-spacing": [
            2,
            "always"
        ],
        "comma-style": [
            2,
            "last"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "space-unary-ops": [
            2,
            {
                "nonwords": false,
                "overrides": {
                    "!": true
                }
            }
        ],
        "space-before-function-paren": [
            2,
            {
                "anonymous": "always",
                "named": "never"

            }
        ],
        "space-infix-ops": 2,
        "no-with": 2,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "brace-style": [
            2,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "eol-last": 2,
        "semi": [ 2, "always" ],
        "dot-notation": 2,
        "no-multi-str": 2,
        "key-spacing": [
            "error",
            {
                "align": "value",
                "mode": "minimum"
            }
        ],

        "no-var": 2
    }
}
